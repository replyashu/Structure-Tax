<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Savings"
        android:textSize="23sp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Investments in 80C"
            android:layout_weight="0.2"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit80c"
            android:layout_weight="0.8"
            android:hint="Max is INR 1,50,000"
            android:inputType="number"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Investments in 80D"
            android:layout_weight="0.2"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit80d"
            android:layout_weight="0.8"
            android:hint="Max is INR 15,000"
            android:inputType="number"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Investment 80ccd"
            android:layout_weight="0.2"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editNPS"
            android:layout_weight="0.8"
            android:hint="Maximum is INR 50,000"
            android:textSize="12sp"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Home Loan Interest"
            android:layout_weight="0.2"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editLoan"
            android:layout_weight="0.8"
            android:hint="Maximum is INR 2,00,000"
            android:textSize="12sp"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnTakeHome"
        android:text="Show Take Home"
        android:layout_margin="30dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtTakeHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Your Monthly Take Home is:\n " />

</LinearLayout>