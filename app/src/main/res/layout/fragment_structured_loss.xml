<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollOuter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/linearOuter"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salary Breakup MonthWise"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_margin="20dp"
        android:textColor="@color/cardview_dark_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BASIC" />

        <EditText
            android:id="@+id/editBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@android:color/white"
            android:hint="0"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/cardview_shadow_start_color" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/cardview_shadow_start_color"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="HRA" />

        <EditText
            android:id="@+id/editHRA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@android:color/white"
            android:hint="0"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/cardview_shadow_start_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="DA" />

        <EditText
            android:id="@+id/editDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@android:color/white"
            android:hint="0"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/cardview_shadow_start_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:background="@color/cardview_shadow_start_color"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="PF" />

        <EditText
            android:id="@+id/editPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@android:color/white"
            android:hint="0"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/cardview_shadow_start_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CONVEYANCE" />

        <EditText
            android:id="@+id/editConveyance"
