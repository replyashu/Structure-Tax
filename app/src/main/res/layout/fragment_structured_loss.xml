<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollOuter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/holo_blue_dark"

    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/linearOuter"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salary Breakup MonthWise"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_margin="20dp"
        android:textColor="@color/cardview_dark_background"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BASIC"/>
       <EditText
           android:id="@+id/editBasic"
           android:layout_marginLeft="30dp"
           android:layout_width="wrap_content"
           android:padding="10dp"
           android:inputType="number"
           android:layout_height="wrap_content"
           android:hint="0"
           android:textColor="@color/cardview_shadow_start_color"
           android:background="@null" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"

        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="HRA"/>
        <EditText
            android:id="@+id/editHRA"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="DA"/>
        <EditText
            android:id="@+id/editDA"
            android:layout_marginLeft="30dp"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/holo_green_light"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="PF"/>
        <EditText
            android:id="@+id/editPF"
            android:layout_marginLeft="30dp"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CONVEYANCE"/>
        <EditText
            android:id="@+id/editConveyance"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MEDICAL"/>
        <EditText
            android:id="@+id/editMedical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FOOD"/>
        <EditText
            android:id="@+id/editFood"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TELEPHONE"/>
        <EditText
            android:id="@+id/editMobile"
            android:layout_marginLeft="30dp"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="HELPER"/>
        <EditText
            android:id="@+id/editHelper"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/cardview_shadow_start_color"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="UNIFORM"/>
        <EditText
            android:id="@+id/editUniform"
            android:layout_marginLeft="30dp"
