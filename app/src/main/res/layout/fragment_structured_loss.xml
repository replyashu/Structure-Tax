        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="HEALTH"/>
        <EditText
            android:id="@+id/editHealth"
            android:layout_marginLeft="30dp"
